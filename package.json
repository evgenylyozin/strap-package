{
  "name": "strap-package",
  "version": "0.0.0",
  "description": "Strap files and tools to start developing an npm package",
  "bin": {
    "strap-package": "./dist/index.js"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evgenylyozin/strap-package.git"
  },
  "scripts": {
    "build": "webpack build --mode=production",
    "test": "vitest run",
    "lint": "eslint ./src",
    "prettify": "prettier . --write",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "stage-updated": "git add -u",
    "prepare-release": "npm run typecheck && npm run lint && npm run test && npm run build",
    "start": "npm run build && npx ."
  },
  "keywords": [
    "npm",
    "package",
    "template",
    "boilerplate",
    "npx"
  ],
  "author": "Evgenii Evgenevich Lezin (https://github.com/evgenylyozin)",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.2",
    "@types/validate-npm-package-name": "^4.0.2",
    "eslint": "^9.18.0",
    "husky": "^9.1.6",
    "prettier": "3.3.3",
    "ts-loader": "^9.5.2",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.20.0",
    "vitest": "^2.1.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1",
    "webpack-shebang-plugin": "^1.1.8"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.2.3",
    "chalk": "^5.4.1",
    "validate-npm-package-name": "^6.0.0"
  }
}
